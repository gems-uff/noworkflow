<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>CUSTOM-executable jar</actionName>
            <displayName>executable jar</displayName>
            <goals>
                <goal>clean:clean</goal>
                <goal>compiler:compile</goal>
                <goal>assembly:single</goal>
            </goals>
        </action>
        <action>
            <actionName>run</actionName>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-classpath %classpath br.uff.ic.sel.noworkflow.controller.NoWorkflow .noworkflow/db.sqlite 1</exec.args>
                <exec.executable>java</exec.executable>
                <exec.workingdir>/Users/vanessa/workspace/noworkflow/tests/weather</exec.workingdir>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -classpath %classpath br.uff.ic.sel.noworkflow.controller.NoWorkflow .noworkflow/db.sqlite 1</exec.args>
                <exec.executable>java</exec.executable>
                <jpda.listen>true</jpda.listen>
                <exec.workingdir>/Users/vanessa/workspace/noworkflow/tests/weather</exec.workingdir>
            </properties>
        </action>
        <action>
            <actionName>profile</actionName>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>${profiler.args} -classpath %classpath br.uff.ic.sel.noworkflow.controller.NoWorkflow .noworkflow/db.sqlite 1</exec.args>
                <exec.executable>${profiler.java}</exec.executable>
                <exec.workingdir>/Users/vanessa/workspace/noworkflow/tests/weather</exec.workingdir>
            </properties>
        </action>
    </actions>
